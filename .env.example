# WhatsApp Internship Application System Environment Variables
# Copy this file to .env and update with your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/internship_db
# For SQLite (development): DATABASE_URL=sqlite:///internship_system.db

# Flask Security (generate with: python3 -c "import secrets; print(secrets.token_urlsafe(32))")
SESSION_SECRET=your-super-secure-random-string-here

# Twilio WhatsApp Configuration
# Get these from: https://console.twilio.com/
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-twilio-auth-token-here
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WHATSAPP_NUMBER=whatsapp:+1234567890

# Optional: Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password

# Optional: Additional SMS Configuration
SMS_SERVICE_API_KEY=your-sms-api-key-if-needed